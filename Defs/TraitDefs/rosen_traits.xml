    <defName>Rosen_Trait_Paragon</defName>
        <commonality>0.1</commonality>
        <forcedPassions>
            <li>Artistic</li>
            <li>Crafting</li>
            <li>Intellectual</li>
        </forcedPassions>
        <degreeDatas>
            <li>
              <label>paragon</label>    
              <description>{PAWN_nameDef} has been genetically engineered to be {PAWN_possessive} society's idea of perfection, possessing an entire suite of unfair advantages.</description>
              <statOffsets>
                <MentalBreakThreshold>-0.03</MentalBreakThreshold>
                <GlobalLearningFactor>1</GlobalLearningFactor>
                <PawnBeauty>1</PawnBeauty>
                <ImmunityGainSpeed>0.1</ImmunityGainSpeed>
              </statOffsets>
              <statFactors>
                  <RestFallRateFactor>0.8</RestFallRateFactor>
              </statFactors>
              <hungerRateFactor>0.8</hungerRateFactor>
            </li>
        </degreeDatas>
